	keywords = {Neurocognition, Feedback, Learning, Teaching, Knowledge Transfer, Parietal Lobe, Spectroscopy, Teachers, Transfer (Learning)},
	pages = {1427--1441},
	file = {Submitted Version:files/1074/Zhu et al. - 2022 - Instructor–learner neural synchronization during elaborated feedback predicts learning transfer.pdf:application/pdf},
}

