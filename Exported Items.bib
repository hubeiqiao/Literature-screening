	number = {6},
	journal = {Journal of Cognitive Neuroscience},
	author = {Yan, Dongyang and Seki, Ayumi},
	year = {2024},
	note = {Publisher: MIT Press Journals},
	keywords = {LANGUAGE, RESPONSES, ACTIVATION, 1ST, AUDIOVISUAL INTEGRATION, BEGINNING READERS, LATERALIZATION, MULTISENSORY INTEGRATION, PERCEPTION, VISUAL SPEECH},
