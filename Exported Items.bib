@article{rha_design_2020,
	title = {Design optimal sampling plans for functional regression models.},
	volume = {146},
	issn = {0167-9473 (print)},
	url = {https://research.ebsco.com/linkprocessor/plink?id=79044a88-6aa6-3269-bf81-b79e4ef34832},
	abstract = {Functional data analysis (FDA) deals with the statisticaldescription and modeling of data treated as functions, curves andsurfaces. Such data appear in many practical applications in economics,industry, medicine, meteorology, etc. The observations are obtainedrepeatedly as values of functions in a grid of time points, which maybe dense or sparse. Many standard statistical methods are adapted foruse with functional data. Naturally, the functional regression analysisis widely considered in practice. It is used to describe therelationship between response and explanatory variables when at leastone of them contains a random function. The three main functionalregression models are as follows: the functional response model (theresponses are curves, but the predictors are known scalars), thescalar-on-function model (the responses are scalars and the predictorsare curves), and the function-on-function model (the responses andregressors are functions). However, in the FDA, a quite new issue isconstructing a sampling schedule for collecting informative functionaldata to make a precise statistical inference. In this paper, theoptimal sampling schedules for recovering the trajectory of a predictorfunction and a response in the function-on-function regression modelare investigated. First of all, the known optimality criteria for thescalar-on-function regression model are extended to thefunction-on-function regression model. The construction of optimalitycriteria is as follows: First, the Karhunen-Loève expansions of thepredictor function and the response function are provided using thefunctional principal component analysis. Using these expansions, theauthors rewrite the function-on-function linear regression model in amore convenient form. Roughly speaking, it is orthogonally decomposed.Truncating these decompositions of predictor function and modelfunction as well as estimating unknown parameters, the authors obtainthe predictions of the predictor and response functions, which convergepointwise to normal distributions. Naturally, the variances of thesedistributions are used to formulate the optimality criteria, whosemaximizing results in minimizing the variances in some sense. Theoptimality criteria are the weighted sum criteria that strike thebalance between the statistical efficiencies in recovering thefunctional predictor and predicting the response. The user-specifiedweights meet the experimenter's needs when one of the objectives ismore important than the other. To find the optimal design under thesecriteria with \$p\$ time points on a discretized domain that has \$N\&gt;p\$equally spaced points, the exhaustive search algorithm, a greedy searchalgorithm, a simple exchange algorithm, a \$k\$-exchange algorithm andprobabilistic subset search (PSS) algorithm are studied. The first fouralgorithms are widely considered in finding optimal experimentaldesigns. The new PSS algorithm involves the selection of subsets ofcandidate time points based on the probability distributions defined bythe estimated variance of the functional predictor. Due to randomlyselecting candidate points, this algorithm has the ability to avoidbeing caught in local optimum. Furthermore, the estimated variancebased distribution used for selecting points helps to accelerate theconvergence of the PSS algorithm. It is also much less computationallyintensive than the exhaustive search algorithm. The performance of thePSS algorithm and its comparison with existing approaches is studied inextensive simulation experiments and examples with real data sets. Theauthors' results indicate that this algorithm is a powerful searchalgorithm and outperforms the competitors in terms of speed andachieved design efficiency. To sum up, the methodology presented in thepaper significantly extends the known results in finding design optimalsampling plans for functional regression models, which can be seen as anew branch of the FDA.},
	language = {eng},
	urldate = {2025-09-15},
	journal = {Computational Statistics {\textbackslash}\& Data Analysis},
	author = {Rha, Hyungmin and Kao, Ming-Hung and Pan, Rong and Smaga, Łukasz},
	month = jan,
	year = {2020},
	keywords = {Statistics -- Design of experiments -- Optimal designs},
	pages = {106925--106925},
}

@article{suzuki_does_2022,
	title = {Does the {Reuse} of {Constructions} {Promote} {Fluency} {Development} in {Task} {Repetition}? {A} {Usage}‐{Based} {Perspective}},
