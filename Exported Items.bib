	year = {2025},
	note = {Place: US
Publisher: Educational Publishing Foundation},
	keywords = {Adult Attitudes, Athletic Training, Endurance, Perceived Stress, Professional Athletes, Self-Regulated Learning, Self-Regulation, Thinking},
