	issn = {22299327 (ISSN)},
	url = {https://www.scopus.com/inward/record.uri?eid=2-s2.0-105014393321&doi=10.24093%2Fawej%2FAI.4&partnerID=40&md5=c01b0b3b8e718e06b274fb44f72d0fe3},
