	note = {Publisher: Elsevier Ltd},
	keywords = {ARRIVED MIGRANTS, ASYLUM SEEKERS, CHILDHOOD IMMUNIZATION, CHILDREN, COVERAGE, HEALTH-CARE, IMMIGRANT, INFLUENZA VACCINATION, KNOWLEDGE, TREATMENT ADHERENCE},
