@article{tomlin_removing_2021,
	title = {Removing the {Blinders}: {Increasing} {Students}' {Awareness} of {Self}-{Perception} {Biases} and {Real}-{World} {Ethical} {Challenges} {Through} an {Educational} {Intervention}},
