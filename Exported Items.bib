@incollection{langenbucher_household_2015,
	title = {Household finance and the law – {A} case study on economic transplants},
	isbn = {978-1-316-02664-9},
	abstract = {And the logical method and form flatter that longing for certainty and for repose which is in every human mind. But certainty generally is illusion, and repose is not the destiny of man. Behind the logical form lies a judgment as to the relative worth and importance of competing legislative grounds … the very root and nerve of the whole proceeding. Law and economics have a history. There have been periods of admiration, flirting and courtship, leading to happy marriages and a bunch of children with names such as torts, antitrust, and banking regulation. There have also been language problems, misunderstandings, and passionate fights about who wears the pants, resulting in the law having affairs with dangerous strangers such as Ronald Dworkin. Today, we seem to be witnessing an aging couple, pottering about in harmony, the fights of the past long forgotten. All they quarrel about nowadays is economics’ newfound hobby involving a lot of mathematics which the law doesn't understand. May we, then, safely assume that they have agreed on what life is about and how to tackle its challenges? Are they speaking a common language? It is claimed in this chapter that this is not the case. The argument put forward here concerns a practice I will call “economic transplants”. The term denotes the process of identifying components of economic theory and integrating them in a legal argument. We have seen substantial collaboration along those lines for a long time. It has been especially popular in financial markets law, where theories such as the efficient capital markets hypothesis, the market for control theory or the capital asset pricing model have had a direct impact not only on legal scholarship, but also on legislators and consequently on the judiciary. Having lost some of their appeal after the financial crisis, behavioural economics approaches have sparked new interest in legal scholars, delivering a new type of “economic transplants”. Household finance regulation provides interesting examples of those, making use of their insights for coping with investor's shortcomings via enhanced information or “nudging” techniques. © Cambridge University Press 2015.},
	language = {English},
	booktitle = {Financial {Regulation}: {A} {Transatlantic} {Perspective}},
	publisher = {Cambridge University Press},
	author = {Langenbucher, Katja},
	editor = {Faia, Ester and Hackethal, Andreas and Haliassos, Michael and Langenbucher, Katja},
	year = {2015},
	doi = {10.1017/CBO9781316026649.016},
	pages = {313--335},
}

@article{park_interface_2025,
