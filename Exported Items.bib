	doi = {10.1075/tblt.11.04wan},
	keywords = {ACCURACY, COH-METRIX, COMPLEXITY, DIVERSITY, FLUENCY, INDEXES, LANGUAGE, LEARNERS, TEXT},
	pages = {97--116},
}

