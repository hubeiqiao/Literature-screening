	journal = {Psychological Review},
	author = {Samara, Anna and Wonnacott, Elizabeth and Saxena, Gaurav and Maitreyee, Ramya and Fazekas, Judit and Ambridge, Ben},
	year = {2025},
	note = {Place: US
Publisher: American Psychological Association},
	keywords = {Training, Verbs, Childhood Development, Language, Adult Development, Generalization (Learning), Linguistics},
	pages = {1--17},
	file = {Full Text PDF:files/1070/Samara et al. - 2025 - Learners restrict their linguistic generalizations using preemption but not entrenchment Evidence f.pdf:application/pdf},
}

@article{delvenne_reduced_2024,
