	urldate = {2025-09-16},
	journal = {The Academy of Management Review},
	author = {Kuwabara, Ko and Hildebrand, Claudius A. and Zou, Xi},
	year = {2018},
	note = {Publisher: Academy of Management},
	pages = {50--64},
