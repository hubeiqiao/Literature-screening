	keywords = {Automated speech scoring, Chinese EFL learners, Spoken English learning, Washback},
	file = {Full Text:files/1374/Gong - 2023 - Challenges and opportunities for spoken English learning and instruction brought by automated speech.pdf:application/pdf},
}

@article{bamdev_automated_2023,
