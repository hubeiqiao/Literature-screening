@article{kittilstved_effects_2018,
	title = {The {Effects} of {Fluency} {Enhancing} {Conditions} on {Sensorimotor} {Control} of {Speech} in {Typically} {Fluent} {Speakers}: {An} {EEG} {Mu} {Rhythm} {Study}},
