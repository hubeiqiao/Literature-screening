	journal = {Jmir Medical Informatics},
	author = {Kim, Kyungmo and Park, Seongkeun and Min, Jeongwon and Park, Sumin and Kim, Ju Yeon and Eun, Jinsu and Jung, Kyuha and Elyson, Yoobin and Kim, Esther and Lee, Eun Young and Lee, Joonhwan and Choi, Jinwook},
	year = {2024},
