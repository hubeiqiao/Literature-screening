	shorttitle = {Do adults believe that god or the devil can influence their conscience?},
	doi = {10.1037/scp0000320},
	abstract = {The conscience, which can be described as an inner feeling or voice that guides moral behavior, is relevant to psychological concepts such as sociomoral competence, self-regulation, and moral struggles. But how do people decide whether to follow their conscience? Their decisions may depend partly on the beliefs they hold about the importance and reliability of their conscience—beliefs that, in turn, might be linked to religious/spiritual variables. By examining these ideas among U.S. adult Mechanical Turk workers (N = 305) with many preregistered hypotheses, this study provides some conceptual and empirical groundwork for incorporating conscience-related beliefs into models linking spirituality with mental health. This project required creation of new multi-item conscience measures to assess several beliefs about the conscience: its importance, its reliability, and how often people follow their conscience. All new measures provided good preliminary evidence of reliability and validity. Results showed that most participants view their conscience as very important and reliable and report following their conscience often when making decisions. As shown in path analyses, religiosity and believing that God can influence the conscience both predicted greater sanctification of one’s conscience; sanctification predicted seeing one’s conscience as more important and reliable, which predicted greater reports of following one’s conscience in everyday life. Believing that the devil can influence one’s conscience was linked with seeing one’s conscience as less reliable. In sum, self-reported readiness to follow one’s conscience shows clear connections with religious/spiritual variables and beliefs about the importance and reliability of one’s conscience. (PsycInfo Database Record (c) 2025 APA, all rights reserved)},
	number = {1},
	journal = {Spirituality in Clinical Practice},
	author = {Schutt, William A. and Exline, Julie J.},
	year = {2025},
	note = {Place: US
Publisher: Educational Publishing Foundation},
	keywords = {Conscience, God Concepts, Morality, Religious Beliefs, Spirituality, Test Construction},
	pages = {98--113},
}

@article{biagianti_breastfeeding_2024,
	title = {Breastfeeding, mutual gratification, and emotion self-regulation: {Bridging} gaps across object relations, drive- and attachment-based psychoanalytic theories},
