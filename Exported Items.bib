	note = {Journal Abbreviation: Proc. Annu. Conf. Int. Speech. Commun. Assoc., INTERSPEECH},
	keywords = {Inception networks, Off-topic spoken responses, Spoken language proficiency assessment, Very deep convolutional neural networks},
	pages = {4200--4204},
}

@incollection{ramanarayanan_beyond_2019,
