	issn = {26676753 (ISSN)},
	url = {https://www.scopus.com/inward/record.uri?eid=2-s2.0-105014504465&doi=10.32038%2Fltrq.2025.49.05&partnerID=40&md5=c31a5d8515ac1fb5217de887bbec0180},
