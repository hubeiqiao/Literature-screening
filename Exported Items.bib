	journal = {Logopedics Phoniatrics Vocology},
	author = {Iwarsson, Jenny},
	year = {2015},
	note = {Publisher: Taylor and Francis Ltd.},
	keywords = {Behavioral learning, habit change, voice therapy},
	pages = {179--186},
}

